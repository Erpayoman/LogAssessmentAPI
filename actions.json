{
  "version": "1.0",
  "actions": [
    {
      "name": "log_user_assessment",
      "description": "Send user assessment results to the Azure Function",
      "metadata": {
        "schema_version": "1.0"
      },
      "api": {
        "type": "openapi",
        "url": "https://pocendavalearningptfnc.azurewebsites.net/api/log-assessment",
        "method": "POST",
        "headers": {
          "x-api-key": "{{API_KEY}}",
          "Content-Type": "application/json"
        },
        "requestBody": {
          "type": "object",
          "properties": {
            "UserId": {
              "type": "string",
              "description": "Unique user ID of the GPT user"
            },
            "AssessmentResult": {
              "type": "object",
              "properties": {
                "Score": {
                  "type": "integer",
                  "description": "Numeric score of the assessment"
                },
                "Feedback": {
                  "type": "string",
                  "description": "Qualitative feedback for the user"
                },
                "CompletedAt": {
                  "type": "string",
                  "format": "date-time",
                  "description": "ISO timestamp of completion"
                }
              },
              "required": [
                "Score",
                "Feedback",
                "CompletedAt"
              ]
            }
          },
          "required": [
            "UserId",
            "AssessmentResult"
          ]
        },
        "responseBody": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string"
            }
          }
        }
      },
      "auth": {
        "type": "none"
      },
      "params": []
    }
  ]
}